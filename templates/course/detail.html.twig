{% extends 'base.html.twig' %}

{% block title %}
	Course Detail
{% endblock %}

{% block body %}
	<div class="container">
		<h4 class="text-primary text-center">
			Course Detail</h4>
			{% if is_granted("ROLE_ADMIN") %}
		<a class="btn btn-outline-primary" href="{{ path('course_add') }}">Add New Course</a>
			{% endif %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Category</th>
					<th>Display</th>
					<th>Student</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ course.id }}</td>
					<td>{{ course.name }}</td>
					<td>{{ course.category }}</td>
					<td>{{ course.display }}</td>
					<td>
						{% for a in course.view %}
							<a href="{{ path('student_detail', {'id': a.id}) }}">
								{{a.name}}
							</a>
							<br>
						{% endfor %}
					</td>

					<td>

						{% if is_granted("ROLE_ADMIN") %}

							<a class="btn btn-info" href="{{ path('course_edit', {'id': course.id}) }}">EDIT</a>
							<a class="btn btn-danger" href="{{ path('course_delete', {'id': course.id}) }}" onclick="return confirm('Em xoá nha cưng ? Đừng quạo em')">DELETE</a>
						{% endif %}
					</td>
				</tr>

			</tbody>

		</table>

	</div>
{% endblock %}
