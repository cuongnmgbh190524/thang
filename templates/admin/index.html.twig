{% extends 'base.html.twig' %}

{% block title %}
	Admin List
{% endblock %}

{% block body %}
	<div class="container">
		<h4 class="text-primary text-center">
			Admin List</h4>
		<a class="btn btn-outline-primary" href="{{ path('admin_add') }}">Add New Admin</a>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
                    <th>Date Of Birthday</th>
					<th>National</th>
					<th>Number Phone</th>
					<th>Avatar</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for admin in admins %}
					<tr>
						<td>{{ admin.id }}</td>
						<td>{{ admin.name }}</td>
						<td>{{ admin.dob|date('d/m/Y') }}</td>
						<td>{{ admin.nationality }}</td>
                        <td>{{ admin.phone }}</td>
						<td>
							<img src="{{asset('images/admin/' ~admin.avatar)}}" width="100" height="120" alt="avatar">
						</td>
						<td>
							<a class="btn btn-primary" href="{{ path('admin_detail', {'id': admin.id}) }}">DETAIL</a>
							{% if is_granted("ROLE_ADMIN") %}
							
							<a class="btn btn-info" href="{{ path('admin_edit', {'id': admin.id}) }}">EDIT</a>
							<a class="btn btn-danger" href="{{ path('admin_delete', {'id': admin.id}) }}" onclick="return confirm('Em xoá nha cưng ? Đừng quạo em')">DELETE</a>
							{% endif %}
							

							
						</td>
					</tr>
				{% endfor %}
			</tbody>

		</table>

	</div>
{% endblock %}
